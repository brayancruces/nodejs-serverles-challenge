{
  "name": "star-wars-api",
  "version": "1.0.0",
  "description": "Serverless Start Wars Api",
  "main": "serverless.ts",
  "scripts": {
    "start": "sls offline start --httpPort 3000",
    "debug": "node --inspect ./node_modules/.bin/sls offline start --httpPort 3000",
    "test": "jest"
  },
  "dependencies": {
    "@middy/core": "^1.5.0",
    "@middy/http-json-body-parser": "^1.5.0",
    "aws-sdk": "^2.824.0",
    "node-fetch": "^2.6.1",
    "source-map-support": "^0.5.19",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@serverless/typescript": "^2.18.0",
    "@types/aws-lambda": "^8.10.70",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.19.12",
    "fork-ts-checker-webpack-plugin": "^6.0.0",
    "jest": "^26.6.3",
    "json-schema-to-ts": "^1.4.1",
    "serverless": "^2.18.0",
    "serverless-dotenv-plugin": "^3.1.0",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-jest-plugin": "^0.3.0",
    "serverless-offline": "^6.8.0",
    "serverless-webpack": "^5.2.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "webpack": "^5.4.0",
    "webpack-node-externals": "^2.5.2"
  },
  "author": "Brayan <brayan2259@gmail.com>",
  "license": "MIT",
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".dist/",
      "<rootDir>/__tests__/",
      "/utils"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "moduleNameMapper": {
      "^@libs(.*)$": "<rootDir>/src/libs$1"
    }
  }
}
